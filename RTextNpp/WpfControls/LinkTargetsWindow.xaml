<Window x:Class            ="RTextNppPlugin.WpfControls.LinkTargetsWindow"
        xmlns              ="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x            ="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc           ="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d            ="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:viewmodels   ="clr-namespace:RTextNppPlugin.ViewModels"
        xmlns:plugin_ns    ="clr-namespace:RTextNppPlugin"
        xmlns:sys          ="clr-namespace:System;assembly=mscorlib"
        xmlns:i            ="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:behaviors    ="clr-namespace:RTextNppPlugin.WpfControls.Behaviors"
        x:ClassModifier    ="internal"
        mc:Ignorable       ="d"
        WindowStyle        ="None"
        ResizeMode         ="NoResize"
        Background         ="white"
        ShowInTaskbar      ="False"
        AllowsTransparency ="True"
        IsVisibleChanged   ="OnReferenceLinksVisibleChanged"
        IsHitTestVisible   ="True"
        LocationChanged    ="OnWindowLocationChanged"
        ShowActivated      ="False"
        Topmost            ="False"
        MouseLeave         ="OnLinkTargetsWindowMouseLeave"
        SizeToContent      ="WidthAndHeight">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <viewmodels:ReferenceLinkViewModel/>
    </Window.DataContext>
    <Border BorderBrush ="Black"
            Name        ="LinkBorder"
            Padding     ="0"            
            SizeChanged ="OnContainerSizeChanged"
            Focusable   ="False"
            Margin      ="0">
        <DockPanel LastChildFill="True" Name="LinkDockPanel" Focusable="False">
            <DockPanel.LayoutTransform>
                <ScaleTransform CenterX="0" 
                                CenterY="0"
                                ScaleX="{Binding ZoomLevel}"
                                ScaleY="{Binding ZoomLevel}"/>
            </DockPanel.LayoutTransform>
            <DockPanel.Resources>                
                <BitmapImage x:Key="MySource" UriSource="/RTextNpp;Component/Resources/warning.png"/>
            </DockPanel.Resources>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Style="{StaticResource ResourceKey=LinkReferenceWindowCollpaseAtZeroCountStyle}" Margin="0" Focusable="False">
                <Image Source="{StaticResource ResourceKey=MySource}" Height="16" Width="16" Margin="0" Focusable="False"/>
                <Label Content="{Binding ErrorMsg}" ToolTipService.ToolTip="{Binding ErrorTooltip}" Padding="0" Margin="0" ToolTipService.Placement="Right" Focusable="False"/>
            </StackPanel>
            <DataGrid DockPanel.Dock                             ="Bottom"
                      ItemsSource                                ="{Binding Targets}"
                      Style                                      ="{StaticResource ResourceKey=LinkReferenceWindowCollpaseAtOneCountStyle}"
                      Name                                       ="LinkTargetDatagrid"
                      ScrollViewer.CanContentScroll              ="True" 
                      ScrollViewer.HorizontalScrollBarVisibility ="Visible" 
                      ScrollViewer.VerticalScrollBarVisibility   ="Auto"
                      AlternationCount                           ="2"
                      Focusable                                  ="False"
                      SelectionMode                              ="Single"
                      AllowDrop                                  ="False"
                      SelectionUnit                              ="FullRow"
                      MaxWidth                                   ="{x:Static plugin_ns:Constants.MAX_AUXILIARY_WINDOWS_WIDTH}"
                      MaxHeight                                  ="{x:Static plugin_ns:Constants.MAX_AUXILIARY_WINDOWS_HEIGHT}" 
                      AutoGenerateColumns                        ="false"
                      VirtualizingStackPanel.IsVirtualizing      ="True"
                      IsReadOnly                                 ="True">
                <i:Interaction.Behaviors>
                    <behaviors:UpdateWidthOnColumnResizedBehavior/>
                </i:Interaction.Behaviors>
                <DataGrid.RowStyle>
                    <Style BasedOn="{StaticResource ResourceKey=LinkReferenceWindowDataGridRowStyle}" TargetType="{x:Type DataGridRow}">
                        <EventSetter Event="DataGridRow.MouseEnter" Handler="OnRowMouseEnter"/>
                        <EventSetter Event="DataGridRow.MouseLeave" Handler="OnRowMouseLeave"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding Display}" IsReadOnly="True" CanUserSort="True" SortMemberPath="Display">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="ToolTipService.ToolTip" Value="{StaticResource ResourceKey=ReferenceLinkToolTip}"/>
                                <Setter Property="ToolTipService.Placement" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="File" IsReadOnly="True" Binding="{Binding File}" CanUserSort="True" SortMemberPath="File">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="ToolTipService.ToolTip" Value="{Binding FilePath}"/>
                                <Setter Property="ToolTipService.Placement" Value="Right"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Border>
</Window>
